[general]
ui = TTY.TTYUI
accounts = made,pathogenix
pythonfile=~/.config/offlineimap/offlineimap.py
fsync = False

[Account made]
localrepository = made-Local
remoterepository = made-Remote
postsynchook = ~/.config/offlineimap/notmuch-hook-work.sh

[Repository made-Local]
type = Maildir
localfolders = ~/.mail/bob-made.com
nametrans = lambda folder: {'drafts':  '[Gmail]/Drafts',
                            'sent':    '[Gmail]/Sent Mail',
                            'flagged': '[Gmail]/Starred',
                            'trash':   '[Gmail]/Trash',
                            'archive': '[Gmail]/All Mail',
                            }.get(folder, folder)
[Repository made-Remote]
maxconnections = 1
type = Gmail
remoteuser = bob.gregory@made.com
remotepasseval = get_pass('bob.gregory')
realdelete = no
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'flagged',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            }.get(folder, folder)
sslcacertfile = /etc/ssl/certs/ca-certificates.crt


[Account pathogenix]
localrepository = pathogenix-Local
remoterepository = pathogenix-Remote
postsynchook = ~/.config/offlineimap/notmuch-hook-personal.sh

[Repository pathogenix-Local]
type = Maildir
localfolders = ~/.mail/pathogenix
nametrans = lambda folder: {'drafts':  '[Gmail]/Drafts',
                            'sent':    '[Gmail]/Sent Mail',
                            'flagged': '[Gmail]/Starred',
                            'trash':   '[Gmail]/Bin',
                            'archive': '[Gmail]/All Mail',
                            }.get(folder, folder)


[Repository pathogenix-Remote]
maxconnections = 1
type = Gmail
remoteuser = pathogenix@gmail.com
remotepasseval = get_pass('pathogenix')
realdelete = no
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'flagged',
                            '[Gmail]/Bin':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            }.get(folder, folder)

sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder.startswith('[Gmail]/') and folder not in ["[Gmail]/Spam", "[Gmail]/Bin"]
