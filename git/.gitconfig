[user]
	email = bob@made.com
	name = Bob Gregory
[core]
	trustctime = false
	excludesfile = ~/.gitignore_global
[init]
	templatedir = ~/.git_template
[color]
	ui = true
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
tool = vimdiff
[push]
	default = current
[pull]
	default = current
